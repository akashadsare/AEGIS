# Use a lightweight Python image
FROM python:3.10-slim

# Set the working directory inside the container
WORKDIR /app

# Install dependencies for PII scrubbing
RUN pip install mcp[fastmcp] presidio-analyzer presidio-anonymizer spacy && \
    python -m spacy download en_core_web_lg

# Copy your script from your laptop into the container
COPY pii_server.py /app/pii_server.py

# (Optional) Set the default command, though Archestra can override it
CMD ["python", "/app/pii_server.py"]